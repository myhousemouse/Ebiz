<?xml version="1.0" encoding="utf-8"?>
<!-- Risk Manager AI 질문 화면 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FAFB"
    android:padding="22dp"
    tools:context=".QuestionsActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="28dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_questions_arrow"
            android:contentDescription="질문 아이콘"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구체화를 위해 알려주세요!"
            android:textSize="16sp"
            android:textColor="#0A0A0A" />

    </LinearLayout>

    <!-- Header Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="더 정확한 리스크 분석을 위해 추가 정보가 필요합니다."
        android:textSize="14sp"
        android:textColor="#4A5568"
        android:layout_marginBottom="30dp" />

    <!-- Questions Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="false">

        <LinearLayout
            android:id="@+id/questionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="28dp"
            android:text="이전"
            android:textSize="16sp"
            android:textColor="#36415A"
            android:background="@drawable/btn_secondary_background_questions" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="최종 분석 시작"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_primary_background_questions"
            android:enabled="false"
            android:drawableEnd="@drawable/ic_arrow_forward"
            android:drawablePadding="8dp" />

    </LinearLayout>

</LinearLayout>
