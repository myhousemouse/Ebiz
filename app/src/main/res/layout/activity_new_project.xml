<?xml version="1.0" encoding="utf-8"?>
<!-- Risk Manager 새 프로젝트 화면 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FAFB"
    tools:context=".NewProjectActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="18dp"
        android:gravity="center_vertical"
        android:elevation="2dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"
            android:scaleType="fitCenter"
            android:contentDescription="뒤로가기" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새 프로젝트"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="#0A0A0A"
            android:layout_marginStart="14dp" />

    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="21dp"
            android:paddingTop="71dp">

            <!-- Icon Section -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/project_icon_background"
                android:layout_marginBottom="13dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_project_chart"
                    app:tint="#1567FC"
                    android:contentDescription="프로젝트" />

            </FrameLayout>

            <!-- Title and Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로젝트 정보 입력"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#101828"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분석할 프로젝트나 아이디어를\n자세히 설명해주세요"
                android:textSize="12sp"
                android:textColor="#4A5568"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="28dp" />

            <!-- Form -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Project Title -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="프로젝트 제목 *"
                        android:textSize="12sp"
                        android:textColor="#36415A"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/project_title"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:background="@drawable/form_input_background"
                        android:padding="12dp"
                        android:hint="예: 온라인 교육 플랫폼 런칭"
                        android:textSize="12sp"
                        android:textColor="#0A0A0A"
                        android:textColorHint="@color/input_hint_color"
                        android:inputType="text" />

                </LinearLayout>

                <!-- Project Description -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="프로젝트 설명 *"
                        android:textSize="12sp"
                        android:textColor="#36415A"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/textarea"
                        android:layout_width="match_parent"
                        android:layout_height="127dp"
                        android:background="@drawable/form_input_background"
                        android:padding="12dp"
                        android:hint="프로젝트의 목표, 대상 고객, 주요 기능 등을 구체적으로 작성해주세요."
                        android:textSize="12sp"
                        android:textColor="#0A0A0A"
                        android:textColorHint="@color/input_hint_color"
                        android:inputType="textMultiLine"
                        android:gravity="top" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상세할수록 더 정확한 리스크 분석이 가능합니다"
                        android:textSize="12sp"
                        android:textColor="#6A7282"
                        android:layout_marginTop="12dp" />

                </LinearLayout>

                <!-- Budget -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="투입 예산 (만원) *"
                        android:textSize="12sp"
                        android:textColor="#36415A"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="10dp"
                            android:maxWidth="162dp">

                            <EditText
                                android:id="@+id/container"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:background="@drawable/form_input_background"
                                android:padding="12dp"
                                android:paddingEnd="45dp"
                                android:hint="5000"
                                android:textSize="12sp"
                                android:textColor="#0A0A0A"
                                android:textColorHint="@color/input_hint_color"
                                android:inputType="number" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="만원"
                                android:textSize="12sp"
                                android:textColor="#6A7282"
                                android:layout_gravity="center_vertical|end"
                                android:layout_marginEnd="12dp" />

                        </FrameLayout>

                        <Button
                            android:id="@+id/input"
                            android:layout_width="162dp"
                            android:layout_height="38dp"
                            android:text="미정"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/budget_unknown_background" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="실패 시 예상 손실을 계산하는 데 사용됩니다"
                        android:textSize="12sp"
                        android:textColor="#6A7282" />

                </LinearLayout>

                <!-- Info Banner -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/info_banner_secondary_background"
                    android:padding="16dp"
                    android:layout_marginBottom="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="다음 단계: AI가 귀하의 프로젝트를 분석하여 가장 중요한 3가지 리스크를 제안합니다."
                        android:textSize="12sp"
                        android:textColor="#1A3CB8" />

                </LinearLayout>

                <!-- Submit Button -->
                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:text="리스크 분석 시작"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/submit_button_background"
                    android:enabled="false" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
